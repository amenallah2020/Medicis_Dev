@model RHEVENT.Models.Autorisation

@{
    ViewBag.titre_page = "Modification d'autorisation";
    ViewBag.email = ViewBag.email;
    ViewBag.nom_prenom = ViewBag.nom_prenom;
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <hr/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)





<div class="row">
    <div class="col-lg-3">
        <span class="badge badge-secondary">
            @Html.LabelFor(model => model.jour_autorisation, htmlAttributes: new { @class = "control-label col-md-2" })
        </span>

        @Html.EditorFor(model => model.jour_autorisation, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.jour_autorisation, "", new { @class = "text-danger" })

    </div>
    <div class="col-lg-3">


        <span class="badge badge-secondary">
            @Html.LabelFor(model => model.heure_sortie, htmlAttributes: new { @class = "control-label col-md-2" })
        </span>

        @Html.EditorFor(model => model.heure_sortie, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.heure_sortie, "", new { @class = "text-danger" })
    </div>

    <div class="col-lg-3">

        <span class="badge badge-secondary">
            @Html.LabelFor(model => model.heure_entree, htmlAttributes: new { @class = "control-label col-md-2" })
        </span>

        @Html.EditorFor(model => model.heure_entree, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.heure_entree, "", new { @class = "text-danger" })
    </div>

</div>




    <br />
    <div class="row">
        <div class="col-lg-3">

            <div class="form-group">

                <input type="submit" value="Sauvegarder" class="btn btn-outline-info" />
                <span class="btn btn-outline-danger">  @Html.ActionLink("Supprimer", "DeleteAutorisationByUser", new { id = Model.Id })</span>

            </div>
        </div>
    </div>
}



<script>
    jQuery('#heure_sortie').datetimepicker({
        datepicker: false,
        format: 'H:i'
    });
    jQuery('#heure_entree').datetimepicker({
        datepicker: false,
        format: 'H:i'
    });
</script>


<script>
    jQuery.datetimepicker.setLocale('fr');

    jQuery('#jour_autorisation').datetimepicker({
        i18n: {
            de: {
                months: [
                    'Janvier', 'Fevrier', 'Mars', 'Avril',
                    'Mai', 'Juin', 'Juillet', 'Aout',
                    'Septembre', 'Octobre', 'Novembre', 'Décembre',
                ],
                dayOfWeek: [
                    "So.", "Mo", "Di", "Mi",
                    "Do", "Fr", "Sa.",
                ]
            }
        },
        timepicker: false,
        format: 'd.m.Y'
    });

 
</script>