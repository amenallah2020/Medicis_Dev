@model RHEVENT.Models.Autorisation

@{
    ViewBag.titre_page = "RH";
    ViewBag.email = ViewBag.email;
    ViewBag.nom_prenom = ViewBag.nom_prenom;
}



<h2 class="text" style="color:blueviolet">
    <span class="glyphicon   glyphicon-credit-card"> </span>
    Autorisations - Demande
</h2>
<br /><br />

 

    @if ((User.IsInRole("RH") && User.IsInRole("RH_Admin")) || (User.IsInRole("RH") && User.IsInRole("RH_Directeur")) || (User.IsInRole("RH") && User.IsInRole("RH_Superieur_Hiéarchique")) || User.IsInRole("Admin_Medicis"))
    {
        <p>
            <div style="color:blue"> <b>  @Html.ActionLink("Attribuer une autorisation", "AttribuerAutorisation")</b></div>
        </p>
    }
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-lg-3">
            <div class="form-group" style="font-size:12px">
                @Html.LabelFor(model => model.jour_autorisation)

                @Html.EditorFor(model => model.jour_autorisation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.jour_autorisation, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="col-lg-3">
            <div class="form-group" style="font-size:12px">
                @Html.LabelFor(model => model.heure_sortie)

                @Html.EditorFor(model => model.heure_sortie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.heure_sortie, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="col-lg-3">
            <div class="form-group" style="font-size:12px">
                @Html.LabelFor(model => model.heure_entree)

                @Html.EditorFor(model => model.heure_entree, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.heure_entree, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="col-lg-3">
            <br />
            <div class="form-group">

                <button type="submit" value="Create" class="btn btn-success">
                    <i class="fas fa-send"></i>
                    envoyer
                </button>
            </div>
        </div>
    </div>


}
