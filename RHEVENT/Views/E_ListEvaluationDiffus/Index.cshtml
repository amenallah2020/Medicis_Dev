                    <td>
                        @Html.DisplayFor(modelItem => item.Nom_usr)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateDiffus)
                    </td>*@


            </tr>
        }

    </table>

</body>
</html>
