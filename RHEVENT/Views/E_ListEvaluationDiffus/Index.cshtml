                <a>@Html.ActionLink("Retour à la liste", "Index", "E_ListEvaluationDiffus")</a>

            </div>


        </form>
    </div>
    <br />
    <table class="table table-striped table-bordered " style="font-size:14px">
        <tr style="color:blue">
            <th>
                Evaluation
            </th>

            <th>
                Objet
            </th>

            @*<th>
