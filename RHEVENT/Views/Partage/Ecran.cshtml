    <script>
        var myIndex = 0;
        carousel();

        function carousel() {




            var i;
            var x = document.getElementsByClassName("slideOutRight");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
                document.getElementById("Container_" + x[i].id).style.visibility = "hidden";
            }
            myIndex++;
            if (myIndex > x.length) { myIndex = 1 }
            document.getElementById("Container_" + x[myIndex - 1].id).style.visibility = "visible";

            x[myIndex - 1].style.display = "block";

            setTimeout(carousel, 40000);

        }
    </script>

    <script>
        var index_droite = 0;
