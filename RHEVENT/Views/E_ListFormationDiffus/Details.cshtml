@model IEnumerable<RHEVENT.Models.E_ListFormationDiffus>
@{
    /**/

    ViewBag.titre_page = "E-learning";
    ViewBag.email = ViewBag.email;
    ViewBag.nom_prenom = ViewBag.nom_prenom;
}



<h2 class="text" style="color:cornflowerblue">
    <span class="glyphicon   glyphicon-expand"> </span>
    Liste des formations diffusées
</h2>
<br />

<h3 class="text" style="color:cornflowerblue">Détails</h3>
 
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>

    <div class="container-fluid" style="border: 1px dashed silver ; height:100px; background-color:white">

        <form asp-action="Index" method="get" style="font-size:12px ; color:cadetblue">
            <br />
            <div class="col-lg-2">
                <label>Groupe</label>
                <input style="width:160px; font-size:11px" class="form-control " type="search" placeholder="Groupe" name="searchStringGroupe" value="@ViewData["CurrentFilterGroupe"]" /><br />
            </div>

            <div class="col-lg-2">
                <label>Matricule utilisateur</label>
                <input style="width:160px; font-size:11px" class="form-control " type="search" placeholder="Matricule utilisateur" name="searchStringMatUsr" value="@ViewData["CurrentFilterMatUsr"]" /><br />
            </div>

            <div class="col-lg-2">
                <label>Nom utilisateur</label>
                <input style="width:160px; font-size:11px" class="form-control " type="search" placeholder="Nom utilisateur" name="searchStringUsr" value="@ViewData["CurrentFilterUsr"]" /><br />
            </div>


            <div class="col-lg-3">

                <br /><input type="submit" value="Recherche " class="btn btn-success" />
                @*<a class="btn btn-danger" asp-action="Index"> Retour à la liste</a>*@

                <a>@Html.ActionLink("Retour à la liste", "Details", "E_ListFormationDiffus")</a>

            </div>


        </form>
    </div>

    <br />
    <table class="table table-striped table-bordered " style="font-size:14px">
        <tr style="color:blue">

            <th>
                Groupe
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mat_usr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom_usr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDiffus)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.deadline)
            </th>


        </tr>

        @foreach (var item in Model)
        {
            <tr style="color:black">

                <td>
                    @Html.DisplayFor(modelItem => item.Code_grp)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Mat_usr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom_usr)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateDiffus)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.deadline)
                </td>

            </tr>
        }

    </table>
    <br />
    <div>
        @Html.ActionLink("Retour à la liste", "Index")
    </div>
</body>
</html>
