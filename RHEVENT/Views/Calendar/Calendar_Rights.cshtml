@model IEnumerable<RHEVENT.Models.Calendrier_Direction>
@{
    ViewBag.Title = "Calendar_Rights";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <font size="2">
        <table class="table" style="text-align:center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nom_prenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.matricule)
                </th>                
                <th>
                    @Html.DisplayNameFor(model => model.service)
                </th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.nom_prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.matricule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.service)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            </td>
        </tr>
            }

        </table>
    </font>

</div>

