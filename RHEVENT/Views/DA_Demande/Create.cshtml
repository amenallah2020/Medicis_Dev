<script>
    $(function () {

        $("#AchatId").change(function () {

            $.get("DA_Demande/getActionByAchat", { ID: $("#AchatId".val()}, function (data) {

                $.each(data, function (index, row) {
                    $("#ActionId").append("<option value = '" + row.Id + "'>" + row.TypeAction + "</option>")
                });

            })
        });
    });
</script>
 