@model RHEVENT.Models.Attestation

@{
    /**/

    ViewBag.titre_page = "RH";
    ViewBag.email = ViewBag.email;
    ViewBag.nom_prenom = ViewBag.nom_prenom;
}



<h2 class="text" style="color:crimson">
    <span class="glyphicon   glyphicon-check"> </span>
    Administration RH - Approbation des attestaions
</h2>
@{
    if (Model.etat_demande != RHEVENT.Models.etat_demande.Demande_en_cours)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("Action refusée ! Demande  déja approuvée ");
                window.location.href = "@Url.Action("Attestations", "Demande")";
            };
        </script>
    }


}



