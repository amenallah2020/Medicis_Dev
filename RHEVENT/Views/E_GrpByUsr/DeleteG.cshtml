@model RHEVENT.Models.E_GrpByUsr

<h2 class="text" style="color:cornflowerblue">
    <span class="glyphicon   glyphicon-expand"> </span>
    Gestion de groupe de diffusion
</h2>
<br /><br />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <h4 style="color:grey">Voulez-vous vraiment supprimer cela?</h4>
    <div>
        <h4 style="color:grey">Groupe</h4>
        <hr />
        <dl class="dl-horizontal" style="color:black">
 
            <dt>
                Groupe
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Code)
            </dd>
             
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            
            <div class="form-actions no-color">
                <br />   <br />
                  
                <input type="submit" value="Supprimer" id=@Model.Code class="btn btn-success" /> |

                @Html.ActionLink("Retour à la liste", "Group" )
            </div>
        }
    </div>
</body>
</html>
