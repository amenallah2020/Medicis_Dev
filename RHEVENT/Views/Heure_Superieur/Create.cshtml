                            </td>

                            <td style="color:black">
                                07-->15<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "07-->15" })
                            </td>
                            <td style="color:black">
                                15-->23<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "15-->23" })
                            </td>
                            <td style="color:black">
                                23-->07<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "23-->07" })
                            </td>
                            <td style="color:black">
                                08-->17<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "08-->17" })
                            </td>
                            <td style="color:black">
                                07-->19<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "07-->19" })
                            </td>
                            <td style="color:black">
                                19-->07<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "19-->07" })
                            </td>
                            <td style="color:black">
                                07-->16<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "07-->16" })
                            </td>
                            <td style="color:black">
                                05-->17<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "05-->17" })
                            </td>
                            <td style="color:black">
                                17-->05<br />
                                @Html.RadioButton("RB" + m.Value, m.Value, m.Selected, new { @id = m.Value + "17-->05" })
                            </td>
                        </tr>

                    </tbody>
                }
            </table>
        </div>
    </div>




    <input type="hidden" class="form-control" id="userid" name="userid" />
    <div class="col-md-offset-4 col-md-8">
        <input type="submit" value="envoyer" class="btn btn-outline-success btn-lg btn-block" onclick="return clik()" />
    </div>
    @Html.EditorFor(model => model.list_employers, new { htmlAttributes = new { @style = "display: none" } })
    <script>
        function clik() {
            allElements = document.getElementsByTagName("*");
            var tabs = [];
            var n = allElements.length;
            var list = "";
            for (var i = 0; i < n; i++) {
                var el = allElements[i];
                if (allElements[i].checked) {
                    if (document.getElementById(el.id).checked) {
                        list = el.id + list;
                    }
                }
            }
 
            var text = document.getElementById("list_employers");
            text.value = list;
        }
    </script>



  


}




