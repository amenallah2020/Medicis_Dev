}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="au-card au-card--bg-white au-card-top-countries m-b-30">
        <div class="au-card-inner"> </div>



        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.jour_planing)

                @Html.EditorFor(model => model.jour_planing, new { htmlAttributes = new { @class = "form-control" } })
